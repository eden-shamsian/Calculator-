<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayoutSecound"
        android:layout_width="373dp"
        android:layout_height="114dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutFirst">

        <Button
            android:id="@+id/button_1"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_mul"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="x"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFour"
        android:layout_width="367dp"
        android:layout_height="116dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutThird">

        <Button
            android:id="@+id/button_7"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFirst"
        android:layout_width="373dp"
        android:layout_height="114dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1">

        <Button
            android:id="@+id/button_clr"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_devide"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="รท"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_modulo"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="%"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_sqrt"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="S"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutThird"
        android:layout_width="367dp"
        android:layout_height="116dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSecound">

        <Button
            android:id="@+id/button_4"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30dp" />


        <Button
            android:id="@+id/button_5"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="408dp"
        android:layout_height="181dp"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutFive"
        android:layout_width="367dp"
        android:layout_height="116dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutFour">

        <Button
            android:id="@+id/button_power"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="^"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_point"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_result"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="30dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>